!{ val domId = java.util.UUID.randomUUID().toString() }

<div class="w-full bg-gray-200 text-black my-4 shadow-md rounded-md">
    <form hx-post="/messages/send" hx-trigger="click from:#send-message-${domId}" hx-swap="none">
        <div class="h-12 flex space-between">
            <input name="messageContent" placeholder="Type a message..." class="w-full px-3">

            <button id="send-message-${domId}" class="w-16">-></button>
        </div>
    </form>
</div>